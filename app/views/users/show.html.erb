<h1 align="center">
 Hello! Welcome to your user page.
</h1>
<h2 align="center">
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myCreateModal">
  Add New Item
</button>
</h2>
<h3 class="col-xs-10 col-xs-offset-1"> 
  To Do List: 
</h3>
<% if current_user.things.present? %>
  <% current_user.things.each do |thing| %>
    <div class="booyah-box col-xs-8 col-xs-offset-2">
      <b>Name: </b> 
      <%= thing.name %> 
      <div class="pull-right">
        <% if current_user && current_user == thing.user %>
          <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myEditModal" >
  Edit This Item
          </button>

          <%= link_to 'Edit', edit_thing_path(thing), :class => 'btn btn-primary' %>
          <%= link_to 'Delete', thing_path(thing), :method => :delete, :data => {:confirm => 'Are you sure you want to delete this?'}, :class => 'btn btn-danger' %>
        <% end %>
      </div> 
      </br>
      <% if thing.due.present? %>
        <b>Date Due: </b>  
        <%= thing.due %> </br>
      <% end %>
      <% if thing.description.present? %>
        <b>Description: </b>
        <%= thing.description %> </br>
      <% end %>
    </div>
    <br class="clr" />
    <br />
  <% end %>
<% end %>


<!-- Button trigger modal 
<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myCreateModal">
  Add New Item
</button>
-->

<!-- Edit Thing Modal -->
<div class="modal fade" id="myEditModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myEditModalLabel">Edit Item</h4>
      </div>
      <%= simple_form_for @thing do |f| %>
        <div class="modal-body">
          <%= f.input :name %>
          <%= f.input :due %>
          <%= f.input :description %>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "Update This Item", :class => 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>


<!-- Create Item Modal -->
<div class="modal fade" id="myCreateModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myCreateModalLabel">Add Something ToDo</h4>
      </div>
      <%= simple_form_for @thing do |f| %>
        <div class="modal-body">
          <%= f.input :name %>
          <%= f.input :due %>
          <%= f.input :description %>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <%= f.submit "Add an Item", :class => 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

